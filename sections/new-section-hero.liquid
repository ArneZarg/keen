  <path d="M41.543 0L43.0023 4.49139H47.7248L43.9042 7.26722L45.3636 11.7586L41.543 8.98278L37.7224 11.7586L39.1817 7.26722L35.3611 4.49139H40.0836L41.543 0Z" fill="#010101"></path>
  <path d="M59.0645 0L60.5238 4.49139H65.2463L61.4257 7.26722L62.8851 11.7586L59.0645 8.98278L55.2438 11.7586L56.7032 7.26722L52.8826 4.49139H57.6051L59.0645 0Z" fill="#010101"></path>
