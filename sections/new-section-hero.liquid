{{ 'hero.css' | asset_url | stylesheet_tag  }}

<style>
.hero .card-hero a {
    color: {{ section.settings.text_button_hero_color }};
    border-color:{{ section.settings.text_button_hero_color }};
    background: {{ section.settings.background_primary }}
  }

  .hero .card-hero a:hover {
    color: {{ section.settings.text_button_hero_color_hover }};
    border-color:{{ section.settings.text_button_hero_color_hover }};
    background-color:{{ section.settings.border }};
    border: 2px solid
  }
 

.hero .card-hero {
  z-index: 2;
}

section.hero.custom-flex {
    display: flex;
    justify-content: space-between;
    /* align-items: center; */
    padding: 0 0;
    gap: 0;
    overflow: hidden;
}

.hero.custom-flex video {
    position: relative;
}

section.hero.custom-flex .hero-banner-video {
    width: calc(50% - 10px)
}

section.hero.custom-flex .card-hero {
  position: relative;
    transform: none;
    top: initial;
    left: initial;
    right: initial;
    width: calc(50%);
    /* height: 100%; */
    color: #000;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

section.hero.custom-flex .card-hero .h1 {
  font-size: 44px;
}

hero.custom-flex .hero_review svg {
  width: 100px
}
a.hero_btn + .hero_btn {
    margin-left: 30px;
    color: {{ section.settings.text_button_secondary }};
    background: {{ section.settings.text_button_secondary_bg }};
    border-color: {{ section.settings.border_secondary }};
    border: 2px solid
}

a.hero_btn + .hero_btn:hover {
  color: {{ section.settings.text_button_hero_color_hover_secondary }};
  background: {{ section.settings.background_hover_secondary }};
  border: 2px solid
}



section.hero.custom-flex li {
  list-style: none;
  padding-left: 0; 
}

section.hero.custom-flex li::before {
  content: "✓";
  margin-right: 5px;
  color: green;
}


section.hero.custom-flex li {
  list-style: none;
  padding-left: 0; 
}

section.hero.custom-flex li::before {
  content: "✓";
  margin-right: 5px;
  color: green;
}

.hero.custom-flex .hero_review svg {
  width: 100px
}
@media(max-width: 991px) {
    section.hero.custom-flex {
      flex-direction: column;
      padding: 0;
      height: auto;
      gap: 0;
    }
    .img-hero-mobile {
        width: 100%;
    }
    section.hero.custom-flex .hero-banner-video {
      width: 100%;
    }

    section.hero.custom-flex .card-hero {
      width: 100%;
      max-width: 100%;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .hero.custom-flex .card-hero p {
        margin: auto;
        max-width: 100%;
        text-align: center;
        line-height: normal;
        padding-top: 0;
    }

    .hero.custom-flex .herotext_slider h3 {
        text-align: center
    }
   .hero.custom-flex .card-hero h1 {
       text-align: center;
       font-size: 26px;
   }
   section.hero.custom-flex ul {
    padding: 0;
   }

    section.hero.custom-flex li {
        text-align: left;
    }
    a.hero_btn + .hero_btn  {
    margin: 0;
    margin-top: 10px
  }

  @media(max-width: 767px) {
    .hero.custom-flex .hero-banner-video {
      min-height: auto;
    }

    section.hero.custom-flex .card-hero .h1 {
      font-size: 34px;
    }
  }
}
</style>

<section class="hero custom-flex">

   {% if section.settings.layout == "image" %}
    <div class="img-hero-mobile">
      {%- if section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 1600
            | image_tag:
              class: "heroimg w100 sm-hide",
              loading: 'lazy',
              sizes: sizes,
              widths: widths,
              fetchpriority: fetch_priority
          }}
      {%- endif -%}
      {%- if section.settings.mobile_image != blank -%}
          {{
            section.settings.mobile_image
            | image_url: width: 768
            | image_tag:
              class: "moheroimg w100 lg-hide",
              loading: 'lazy',
              sizes: sizes,
              widths: widths,
              fetchpriority: fetch_priority
          }}
      {%- endif -%}   
    </div>
   {%- endif -%}
  
{% if section.settings.layout == "video" %}

<hero-banner-video video-src="{{ section.settings.video }}"></hero-banner-video>

<script src="{{ 'video-auto-play.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
  
  <div class="card-hero hero_{{ section.settings.text-align }}_align" style="color:{{ section.settings.text_color }}; background-color:{{ section.settings.background_section }};">

    {%- if section.settings.review_show != blank -%}
<div class="reviewstar">
