  </svg></span> {{ section.settings.review_text }}
</div>
      {%- endif -%}
    

      <div class="herotext_slider">
        {%- if section.settings.slide_text_1 != blank -%}<div><h3 class="h1">{{ section.settings.slide_text_1 }}</h3></div>{%- endif -%}
        {%- if section.settings.slide_text_2 != blank -%}<div><h3 class="h1">{{ section.settings.slide_text_2 }}</h3></div>{%- endif -%}  
        {%- if section.settings.slide_text_3 != blank -%}<div><h3 class="h1">{{ section.settings.slide_text_3 }}</h3></div>{%- endif -%}
        {%- if section.settings.slide_text_4 != blank -%}<div><h3 class="h1">{{ section.settings.slide_text_4 }}</h3></div>{%- endif -%}
        {%- if section.settings.slide_text_5 != blank -%}<div><h3 class="h1">{{ section.settings.slide_text_5 }}</h3></div>{%- endif -%}
      </div>

    
    {%- if section.settings.title_hero != blank -%}
    <h1>{{ section.settings.title_hero }}</h1>
       {%- endif -%}
    {%- if section.settings.content != blank -%}
    <p>{{ section.settings.content }}</p>
     {%- endif -%}
     
    {%- if section.settings.text_button_hero != blank -%}
    <a href="{{ section.settings.link_hero }}" class="hero_btn">{{ section.settings.text_button_hero }}</a>
     {%- endif -%}
     {%- if section.settings.text_button_hero_2 != blank -%}
      <a href="{{ section.settings.link_hero_2 }}" class="hero_btn">{{ section.settings.text_button_hero_2 }}</a>
       {%- endif -%}
       {{ section.settings.paragraph }}
       
  </div>
</section>

<script src="{{ 'new-section-hero.js' | asset_url }}" defer></script>

